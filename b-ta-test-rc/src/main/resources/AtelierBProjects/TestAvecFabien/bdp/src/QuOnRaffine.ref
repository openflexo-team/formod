REFINEMENT QuOnRaffine
REFINES UnSysteme

CONCRETE_CONSTANTS
    ee

PROPERTIES
    ee = dd

ABSTRACT_VARIABLES
    aa , bb , cc

INVARIANT
    aa : NATURAL &
    bb : NATURAL &
    cc : NATURAL &
    aa + bb + cc = nn &
    ( aa = 0 or cc = 0 )

/*
VARIANT
    2*aa+bb
*/

INITIALISATION
    aa := 0 ||
    bb := 0 ||
    cc := 0

OPERATIONS
     ML_In =
             SELECT aa > 0
             THEN        aa := aa - 1
                 END ;

    ML_Out =
               SELECT aa + bb < dd & cc = 0
              THEN   aa := aa + 1
               END ;

    IL_In =
             SELECT aa > 0
             THEN        aa := aa - 1 || bb := bb + 1
                 END ;

    IL_Out =
               SELECT aa = 0 & bb > 0
              THEN   cc := cc + 1 || bb := bb - 1
               END

 END
